CREATE TABLE PostDao (
    id TEXT NOT NULL PRIMARY KEY,
    title TEXT NOT NULL,
    description TEXT NOT NULL,
    imageUrl TEXT,
    publishedAt INTEGER NOT NULL,
    feedId INTEGER NOT NULL,
    isSaved TEXT NOT NULL,
    link TEXT,
    isRead TEXT NOT NULL,
    hasTriedToLoadMetadata TEXT NOT NULL,
    addedAt INTEGER NOT NULL
);

getAll:
SELECT * FROM PostDao;

getByFeedId:
SELECT * FROM PostDao
WHERE feedId IN ?
ORDER BY publishedAt DESC
LIMIT :limit OFFSET :offset;

getPostById:
SELECT * FROM PostDao
WHERE id = :id;

insertOrUpdate:
INSERT OR REPLACE INTO PostDao
VALUES ?;

insertOrIgnore:
INSERT OR IGNORE INTO PostDao
VALUES ?;

delete:
DELETE FROM PostDao WHERE id = :id;

deletePostsFromFeed:
DELETE FROM PostDao WHERE feedId = :feedId;

deleteAll:
DELETE FROM PostDao;
