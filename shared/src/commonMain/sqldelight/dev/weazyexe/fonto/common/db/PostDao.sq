CREATE TABLE PostDao (
    id TEXT NOT NULL PRIMARY KEY,
    title TEXT NOT NULL,
    description TEXT NOT NULL,
    content TEXT,
    imageUrl TEXT,
    publishedAt TEXT,
    source TEXT NOT NULL,
    sourceIcon BLOB,
    isSaved TEXT NOT NULL
);

getAll:
SELECT * FROM PostDao;

insertOrUpdate:
INSERT OR REPLACE INTO PostDao
VALUES ?;

delete:
DELETE FROM PostDao WHERE id = :id;

deleteAll:
DELETE FROM PostDao;